<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/shapeofyou"
        android:visibility="visible"
        android:id="@+id/img_1"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bac1"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/img_1"
        android:id="@+id/img_2"/>

    <EditText
        android:id="@+id/ed_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="88dp"
        android:hint="Enter name"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        tools:layout_editor_absoluteX="-40dp" />

    <Button
        android:id="@+id/btn_continue_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="continue"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ed_11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/ed_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter otp"
        android:visibility="gone"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_2" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ed_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_submit"/>



</androidx.constraintlayout.widget.ConstraintLayout>